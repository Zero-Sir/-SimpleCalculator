/* pages/cal/cal.wxss */
.cal-container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #808080;
  font-family: "Microsoft YaHei";
  overflow-x: hidden;
}

.screen{
  text-align: right;
  color: #FFFFFF;
  width: 100%;
  height: 25%;
  line-height: 260rpx;
  padding: 0 10rpx;
  font-size: 80rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #fff;
}

.operator{
  width: 100%;
  height: 75%;
}

.btnGroup{
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 20%;
  background-color: #fff;
}

.item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 1px;
  margin-right: 1px;
  font-size: 50rpx;
}


.orange {
    color: #fef4e9;
    background-color: #f78d1d;
}
.orange:active{
  background-color: #CD5C5C;
}
.blue {
    color: #000000;
    background-color: #DCDCDC;
}
.blue:active{
  background-color: #808080;
}

