<!--pages/cal/cal.wxml-->
<view class="cal-container">
  <view class="screen">
   {{screenData}}
  </view>

  <view class="operator">
    <view class="btnGroup">
      <view class="item orange" bindtap='operation' id='{{idclear}}'>CE</view>
      <view class="item orange" bindtap='operation' id='{{idadd}}'>＋</view>
      <view class="item orange" bindtap='operation' id='{{idsub}}'>－</view>
      <view class="item orange" bindtap='operation' id='{{idback}}'>←</view>
    </view>

    <view class="btnGroup">
      <view class="item blue" bindtap='operation' id='{{id7}}'>7</view>
      <view class="item blue" bindtap='operation' id='{{id8}}'>8</view>
      <view class="item blue" bindtap='operation' id='{{id9}}'>9</view>
      <view class="item orange" bindtap='operation' id='{{idmul}}'>×</view>
    </view>

    <view class="btnGroup">
      <view class="item blue" bindtap='operation' id='{{id4}}'>4</view>
      <view class="item blue" bindtap='operation' id='{{id5}}'>5</view>
      <view class="item blue" bindtap='operation' id='{{id6}}'>6</view>
      <view class="item orange" bindtap='operation' id='{{iddev}}'>÷</view>
    </view>

    <view class="btnGroup">
      <view class="item blue" bindtap='operation' id='{{id1}}'>1</view>
      <view class="item blue" bindtap='operation' id='{{id2}}'>2</view>
      <view class="item blue" bindtap='operation' id='{{id3}}'>3</view>
      <view class="item orange" bindtap='operation' id='{{idcpl}}'>%</view>
    </view>

    <view class="btnGroup">
      <view class="item orange iconBtn" bindtap='history' id='{{idequal}}'>
        <icon type='waiting_circle' color='white' class='icon' size='25'/>
      </view>
      <view class="item blue" bindtap='operation' id='{{id0}}'>0</view>
      <view class="item blue" bindtap='operation' id='{{iddot}}'>.</view>
      <view class="item orange" bindtap='operation' id='{{idequal}}'>＝</view>
    </view>
  </view>
</view>