/* pages/history/history.wxss */
page{
  background-color: #DCDCDC;
}

.his-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #DCDCDC;
  font-family: "Microsoft YaHei";
}

.title{
  width: 20%;
  line-height: 70rpx;
  color: #696969;
  border-radius: 3px;
  border: 1px solid #F5F5F5;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #DCDCDC;
}

.item{
  width: 85%;
  line-height: 85rpx;
  color: #696969;
  border-bottom: 1px solid #fff;
  margin: 3rpx 5rpx;
  text-align: left;
}